<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivBook"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ivHeight"
            android:layout_marginTop="20dp"
            tools:src="@drawable/spinner"/>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_bold"
                tools:text="@string/tvTitle" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/tvMarginTop"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/tvAuthor"
            android:fontFamily="@font/montserrat_medium"
            tools:text="Autor" />
        <TextView
            android:id="@+id/tvRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/tvMarginTop"
            android:textColor="@color/white"
            android:textSize="@dimen/tvAuthor"
            android:fontFamily="@font/montserrat_medium"
            tools:text="Rating" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="25dp"
            android:orientation="vertical"
            android:background="@drawable/background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="20sp"
                android:text="Description"/>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTopDescription"
                android:textColor="@color/black"
                android:textSize="@dimen/tvSizeDescription"
                android:fontFamily="@font/montserrat_medium"
                tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="20sp"
                android:text="Pages:"/>

            <TextView
                android:id="@+id/tvPages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="15sp"
                android:text="2020"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="20sp"
                android:text="Published:"/>

            <TextView
                android:id="@+id/tvPublished"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="15sp"
                android:text="1950"/>

            <Button
                android:id="@+id/button_so"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:clickable="true"
                android:cursorVisible="true"
                android:linksClickable="true"
                android:onClick="openWebURL"
                android:text="Download" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>